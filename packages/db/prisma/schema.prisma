generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  avatar        String?
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  image         String?
  accounts      Account[]
  projects      Project[]
  sessions      Session[]

  @@map("User")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String    @unique   // used for better-auth
  userId                String
  type                  String?
  providerId              String
  providerAccountId     String?  // TODO:we have to find a way to get this
  refreshToken         String?
  accessToken          String?
  expires_at            Int?
  token_type            String?
  scope                 String?
  idToken              String?
  session_state         String?
  accessTokenExpiresAt  DateTime?
  createdAt             DateTime  @default(now())
  password              String?
  refreshTokenExpiresAt DateTime?
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, providerAccountId])
  @@index([userId])
  @@map("Account")
}

model Session {
  id           String   @id @default(cuid())
  token String   @unique
  userId       String
  expiresAt      DateTime
  createdAt    DateTime @default(now())
  ipAddress    String?
  updatedAt    DateTime @updatedAt
  userAgent    String?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("Session")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  expiresAt  DateTime

  @@unique([identifier, value])
  @@map("Verification")
}

model Project {
  id          String      @id @default(cuid())
  name        String
  description String?
  userId      String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  recordings  Recording[]

  @@index([userId])
  @@map("Project")
}

model Recording {
  id         String   @id @default(cuid())
  projectId  String
  title      String
  duration   Int?
  status     String   @default("processing")
  storageUrl String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tracks     Track[]

  @@index([projectId])
  @@map("Recording")
}

model Track {
  id          String    @id @default(cuid())
  recordingId String
  userId      String?
  trackUrl    String
  trackType   String
  createdAt   DateTime  @default(now())
  recording   Recording @relation(fields: [recordingId], references: [id], onDelete: Cascade)

  @@index([recordingId])
  @@map("Track")
}

model UploadSession {
  id             String   @id @default(cuid())
  userId         String
  recordingId    String
  filename       String
  mimeType       String
  totalSize      Int
  chunkSize      Int
  totalChunks    Int
  uploadedChunks Int[]
  storageKey     String
  uploadId       String?
  status         String   @default("initializing")
  etags          Json?  // for storing etags
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  expiresAt      DateTime

  @@index([userId])
  @@index([recordingId])
  @@index([status])
  @@index([expiresAt])
}

model RecordingSession {
  id                String   @id @default(cuid())
  hostId            String
  hostName          String?
  title             String?
  description       String?
  inviteToken       String   @unique // shareable link token
  maxGuests         Int      @default(5)
  expiresAt         DateTime
  status            String   @default("waiting") // waiting, active, completed, cancelled
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  guests            RecordingGuest[]

  @@index([hostId])
  @@index([inviteToken])
  @@index([status])
}

model RecordingGuest {
  id                String   @id @default(cuid())
  sessionId         String
  guestName         String?
  guestEmail        String?
  clientId          String   @unique // webSocket client ID
  status            String   @default("invited") // invited, joined, left, kicked
  joinedAt          DateTime?
  leftAt            DateTime?
  createdAt         DateTime @default(now())

  session           RecordingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([clientId])
}